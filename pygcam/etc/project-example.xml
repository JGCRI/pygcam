<?xml version="1.0" encoding="UTF-8"?>
<!--
This file defines one or more "projects" that are run using the runProjects.py script.
-->
<projects xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="project-schema.xsd">
	<project name="simple">
		<vars>
			<var name="startYear">2015</var>
			<var name="shockYear">2020</var>
			<var name="endYear">2050</var>
			<var name="years" eval="1">{startYear}-{endYear}</var>
			<var name="queryPath" eval="1">{GCAM.QueryDir}{PSEP}{GCAM.QueryDir}/Main_queries_customized.xml</var>
		</vars>

		<steps>
			<!--
			The names defined in steps can be used on the command-line to limit operations to these steps.
			If runFor="baseline", the step is run only for baseline scenarios. If runFor="policy", the step
			is run only for non-baseline scenarios. If not set (or set to any other value) the step is run
			for all scenarios.
			 -->
			<step name="setup" runFor="baseline">@setup -b {baseline} -g {scenarioGroup} -S {scenarioSubdir} -w {scenarioDir} -p {endYear} -y {shockYear}-{endYear}</step>
			<step name="gcam"  runFor="baseline">@gcam -s {baseline} -S {projectXmlDir} </step>
			<step name="query" runFor="baseline">@query -o {batchDir} -w {scenarioDir} -s {scenario} -Q "{queryPath}" -q "{queryXmlFile}"</step>

			<!-- Explicitly require policy setup, gcam, and query steps to run after baseline in case we use baseline results in constraints -->
			<step name="setup" runFor="policy">@setup -b {baseline} -s {scenario} -g {scenarioGroup} -S {scenarioSubdir} -w {scenarioDir} -p {endYear} -y {shockYear}-{endYear}</step>
			<step name="gcam"  runFor="policy">@gcam -s {scenario} -S {projectXmlDir}</step>
			<step name="query" runFor="policy">@query -o {batchDir} -w {scenarioDir} -s {scenario} -Q "{queryPath}" -q "{queryXmlFile}"</step>

			<!-- Plot individual scenario results (differences are plotted in "plotDiff" step) -->
			<step name="plot"  runFor="all">@chart {scenPlotArgs} --scenario {scenario} --fromFile {scenPlots}</step>

			<step name="diff"     runFor="policy">@diff -D {sandboxDir} -y {years} -Y {shockYear} -q {queryXmlFile} {baseline} {scenario}</step>
			<step name="plotDiff" runFor="policy">@chart {diffPlotArgs} --reference {baseline} --scenario {scenario} --fromFile {diffPlots}</step>

			<!-- Generate XLSX workbooks with direct and annually-interpolated results -->
			<step name="xlsx"     runFor="policy">@diff -D {diffsDir} -c -y {years} -Y {shockYear} -o diffs.xlsx {diffsDir}/*.csv</step>
			<step name="xlsx"     runFor="policy">@diff -D {diffsDir} -c -y {years} -Y {shockYear} -o "{scenario}-annual.xlsx" -i {diffsDir}/*.csv</step>
		</steps>

		<vars>
			<var name="plotCIArgs" eval="1">-D {diffsDir} -n3 -d figures -y {years} --barWidth=0.25 --box --label --legendY='-0.2' -z --sumYears -Y 'g CO$_2$e / MJ' -T 'Contributions to carbon intensity'</var>
		</vars>

		<!-- Queries to run, including rewrites to perform on results -->
		<queries varName="queryXmlFile" defaultMap="regions">
			<query name="Land_Allocation">
				<rewriter name="landCover"/>
			</query>
			<query name="Refined-liquids-production-by-technology" useDefault="0">
				<rewriter name="liquidFuels"/>
			</query>
			<query name="Climate_forcing"/>
			<query name="Global_mean_temperature" useDefault="0"/>
		</queries>

		<vars>
			<!-- common arguments to chart subcommand used for each line in the tmp file stored in variable 'scenPlots' -->
			<var name="scenPlotArgs" eval="1">-D {batchDir} --outputDir figures --years {years} --label --labelColor black --box</var>
		</vars>

		<tmpFile varName="scenPlots">
			<text>Refined-liquids-production-by-technology-{scenario}.csv -Y EJ -I technology -i -T 'Refined liquid fuels production' -c region -n 4</text>
		</tmpFile>

		<vars>
			<!-- common arguments for 'diffPlots' -->
			<var name="diffPlotArgs" eval="1">-D {diffsDir} --outputDir figures --years {years} --label --ygrid --zeroLine</var>
		</vars>

		<tmpFile varName="diffPlots">
			<!-- Refined liquids production, USA alone, and global -->
			<text>Refined-liquids-production-by-technology-{scenario}-{reference}.csv -c region -I technology -T '$\Delta$ Refined liquid fuels production (global)' -n 3</text>
			<text>Refined-liquids-production-by-technology-{scenario}-{reference}.csv -x USA.png --region "USA" -c region -I technology -T '$\Delta$ Refined liquid fuels production (USA)' -n 3</text>

			<!-- Land allocation -->
			<text>Land_Allocation-{scenario}-{reference}.csv -Y 'hectares' -m kkm2_to_ha -n 3 -x by-region-2020.png -c land-allocation -I region -v 2020 --format=',' -T 'Area change (2020)'</text>
			<text>Land_Allocation-{scenario}-{reference}.csv -Y 'hectares' -m kkm2_to_ha -n 3 -x by-region-2030.png -c land-allocation -I region -v 2030 --format=',' -T 'Area change (2030)'</text>
			<text>Land_Allocation-{scenario}-{reference}.csv -Y 'hectares' -m kkm2_to_ha -n 3 -x by-region-2040.png -c land-allocation -I region -v 2040 --format=',' -T 'Area change (2040)'</text>
			<text>Land_Allocation-{scenario}-{reference}.csv -Y 'hectares' -m kkm2_to_ha -n 3 -x by-region-2050.png -c land-allocation -I region -v 2050 --format=',' -T 'Area change (2050)'</text>

			<!-- Forcing and temperature change -->
			<text>Climate_forcing-{scenario}-{reference}.csv   -Y 'W/m$^2$' --timeseries -T '$\Delta$ Total Climate Forcing'</text>
			<text>Global_mean_temperature-{scenario}-{reference}.csv -Y 'Degrees C' --timeseries -T '$\Delta$ Global Mean Temperature'</text>
		</tmpFile>

		<comment>
			<!-- Eliminate redundancy by allowing this -->
			<scenarioSetupFile>xxxxx.xml</scenarioSetupFile>
			of
			<scenarioSetup>
				<scenarioGroup name="foo">
					<!-- etc -->
				</scenarioGroup>
			</scenarioSetup>
		</comment>

		<scenarioGroup name="protect-0" default="1">
			<scenario name="base-0" baseline="1"/>
			<scenario name="corn-0"/>
			<scenario name="switchgrass-0"/>
			<scenario name="biodiesel-0"/>
		</scenarioGroup>

		<scenarioGroup name="protect-0.90">
			<scenario name="base-0.90" baseline="1"/>
			<scenario name="corn-0.90"/>
			<scenario name="switchgrass-0.90"/>
			<scenario name="biodiesel-0.90"/>
		</scenarioGroup>
	</project>
</projects>
